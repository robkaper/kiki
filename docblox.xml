<?xml version="1.0" encoding="UTF-8" ?>                                     
<docblox>
  <parser>
    <target>doc/api</target>
  </parser>
  <transformer>
    <target>doc/api</target>
  </transformer>
  <files>
    <directory>htdocs</directory>
    <directory>lib</directory>
  </files>


  <markers>
    <item>TODO</item>
    <item>FIXME</item>
    <item>WARNING</item>
    <item>HACK</item>
    <item>BUG</item>
  </markers>

  <extensions>
    <extension>php</extension>
    <extension>tpl</extension>
  </extensions>

  <transformations>
    <template>
      <name>default</name>
    </template>
  </transformations>
</docblox>
